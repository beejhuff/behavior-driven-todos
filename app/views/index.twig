<html>
  <head>
    <title>Todo List</title>
  </head>
  <body>
    <h1>Todos</h1>
    <p id="error">

    </p>
    <input type="text" id="todo" /> <button id="add">add</button>
    <ul id="todos">
      {% for todo in todos %}
        <li{% if todo.done %} class="todo-complete"{% endif %}>
          {{ todo.label }}
          <input type="checkbox" data-id="{{ todo._id }}" name="todo_{{ loop.index0 }}"{% if todo.done %} checked="checked"{% endif %} />
          <div class="todo-delete todo-delete-{{ loop.index0 }}">x</div>
        </li>
      {% endfor %}
    </ul>
    <button type="button" id="complete-all">Complete All</button>
    <button type="button" id="clear-completed">Clear Completed</button>

    <script src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/3.5.0/lodash.min.js"></script>
    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="js/todos.js"></script>
  </body>
</html>
